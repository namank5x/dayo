{{!< default}}
{{!> header}}

<div class="index-container">

     <div class="row">
         <div class="eight columns">
             {{#foreach posts}}
            <div class="post-box">
                {{#if image}}
                    <div class="post-image">
                         <a href="{{url}}"><img src="{{image}}"></a>
                    </div>
                {{/if}}
                <div class="post-meta">
                    <time datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
                    
                    {{#if tags}}
                      in
                        <div class="post-tags">
                             {{tags separator=" | "}}
                        </div>
                    {{/if}}
                </div>
                <div class="post-heading">
                    <h6 class="post-title" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h6>
                </div>
                <div class="post-excerpt">
                    {{excerpt words = "20"}}
                </div>
            </div>
             {{/foreach}}
            
        {{#if pagination}}
             <div class="post-pagination">
                 {{{pagination}}}
             </div>
        {{/if}}
         </div>
